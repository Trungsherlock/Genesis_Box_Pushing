<?xml version="1.0"?>
<robot name="t_block">

  <link name="t_link">

    <!-- Big vertical block -->
    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="0.5 1.5 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="0.5 1.5 0.5"/>
      </geometry>
    </collision>

    <!-- Small horizontal block -->
    <visual>
      <origin xyz="-0.5 0 0.25"/>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.5 0 0.25"/>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
    </collision>

    <!-- Combined inertial (approximate center of mass) -->
    <inertial>
      <origin xyz="-0.07 0 0.17"/>
      <mass value="0.05"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>

  </link>

</robot>
